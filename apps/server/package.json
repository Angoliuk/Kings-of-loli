{
  "name": "backend",
  "private": true,
  "version": "1.0.0",
  "main": "./server.ts",
  "tsup": {
    "entry": [
      "src/server.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ]
  },
  "scripts": {
    "build": "tsup",
    "generateDB:docker": "docker-compose -f ../../docker-compose.dev.yaml exec kol-api npm run pushDB",
    "dev": "tsup --watch --onSuccess \"node dist/server.js\"",
    "lint": "eslint ./src --max-warnings=0 && tsc --noEmit",
    "pushDB": "cd ./prisma && npx prisma db push && npx prisma generate && cd ../",
    "generateDB": "cd ./prisma && npx prisma generate && cd ../",
    "pullDB": "cd ./prisma && npx prisma db pull && npx prisma generate && cd ../",
    "openDB": "cd ./prisma && npx prisma studio",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@swc/core": "^1.3.39",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@trpc/server": "^10.14.1",
    "argon2": "^0.30.3",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "eslint-config-base": "workspace:*",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.1.2",
    "zod": "^3.21.4"
  }
}
