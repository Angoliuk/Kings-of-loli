generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String   @id @default(uuid())
  name            String   @unique
  createdAt       DateTime @default(now())
  password        String
  profile_picture String?
  score           Int      @default(0)
  sound           Int      @default(100)
  updatedAt       DateTime @updatedAt
}
