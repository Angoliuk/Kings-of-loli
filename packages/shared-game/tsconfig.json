{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "NodeNext",
    "rootDir": "./",
    "sourceMap": true,
    "noEmitOnError": false,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "outDir": "./dist"
  },

  "include": ["./src", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
